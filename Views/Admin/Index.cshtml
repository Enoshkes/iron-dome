@model IronDome.ViewModel.AdminVM;

<div>
    <h1>Admin</h1>
    <div>
        <form asp-action="Update" method="post">
            @Html.AntiForgeryToken()
            <h3>Missile Amount @Model.MissileAmount</h3>
            <label class="form-label" asp-for="MissileAmount">Update</label>
            <input class="input-group-sm" type="number" asp-for="MissileAmount" value="@Model.MissileAmount" />
            <input type="submit" class="btn btn-outline-success" value="Send" />
        </form>
    </div>
</div>