@model IronDome.Dto.ThreatManagement

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>ThreatManagementVM</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="ThreatType" class="control-label"></label>
                <select asp-for="ThreatType" asp-items="Html.GetEnumSelectList<ThreatType>()" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="ThreatSource" class="control-label"></label>
                <select asp-for="ThreatSource" asp-items="Html.GetEnumSelectList<ThreatSource>()" class="form-control">
                </select>
            </div>
            <div class="form-group">
                <label asp-for="TargetArea" class="control-label"></label>
                <select asp-for="TargetArea" asp-items="Html.GetEnumSelectList<TargetArea>()" class="form-control">
                </select>
            </div>
            <div class="form-group form-check">
                <label class="form-check-label">
                    <input class="form-check-input" asp-for="IsActive" /> @Html.DisplayNameFor(model => model.IsActive)
                </label>
            </div>
            <div class="form-group">
                <input type="submit" value="Create" class="btn btn-primary" />
            </div>
        </form>
    </div>
</div>

<div>
    <a asp-action="Index">Back to List</a>
</div>

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
