@model IEnumerable<IronDome.Dto.ThreatManagement>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ThreatType)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ThreatSource)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.TargetArea)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MissileAmount)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsActive)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ThreatType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ThreatSource)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.TargetArea)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MissileAmount)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsActive)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { /* id=item.PrimaryKey */ }) |
                
                @if(!item.IsActive) 
                { 
                    @Html.ActionLink("Launch", "Launch", new { id = item.Id })
                } |

                @Html.ActionLink("Abort", "Abort", new { id = item.Id })
                @Html.ActionLink("Delete", "Delete", new { /* id=item.PrimaryKey */ }) 
            </td>
        </tr>
}
    </tbody>
</table>
